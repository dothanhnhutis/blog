generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  BUSINESS_PARTNER
  CUSTOMER
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DISABLED
}

model User {
  id                       String          @id @default(uuid())
  email                    String?         @unique
  emailVerified            Boolean         @default(false)
  emailVerificationExpires DateTime? //24h
  emailVerificationToken   String?         @unique
  password                 String?
  passwordResetToken       String?         @unique
  passwordResetExpires     DateTime? //4h
  role                     UserRole        @default(CUSTOMER)
  status                   UserStatus      @default(ACTIVE)
  reActiveToken            String?         @unique
  reActiveExpires          DateTime? //4h
  firstName                String
  lastName                 String
  picture                  String?
  phoneNumber              String          @default("")
  createdAt                DateTime        @default(now())
  updatedAt                DateTime        @updatedAt
  oauthProviders           OauthProvider[]
  mfa                      MFA?

  @@index([email, emailVerificationToken, passwordResetToken, reActiveToken])
}

model OauthProvider {
  providerId String
  provider   String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@id([provider, providerId])
}

model MFA {
  secretKey       String
  lastAccess      DateTime @updatedAt
  backupCodes     String[]
  backupCodesUsed String[] @default([])
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId])
  @@index([backupCodes, backupCodesUsed])
}

model PostTag {
  id          String        @id @default(uuid())
  postId      String
  tagFor      String
  tagName     String
  createdAt   DateTime      @default(now())
  PostWithTag PostWithTag[]

  @@unique([tagFor, tagName])
  @@index([tagFor, tagName])
}

model PostCategory {
  id           String   @id @default(uuid())
  categoryFor  String
  categoryName String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Post         Post[]

  @@unique([categoryFor, categoryName])
  @@index([categoryFor, categoryName])
}

model PostWithTag {
  post    Post    @relation(fields: [postId], references: [id])
  postTag PostTag @relation(fields: [postTagId], references: [id])

  postId    String
  postTagId String

  @@id([postId, postTagId])
}

model Post {
  id         String             @id @default(uuid())
  title      String
  slug       String
  tags       PostWithTag[]
  categoryId String
  category   PostCategory       @relation(fields: [categoryId], references: [id])
  postMores  PostWithPostMore[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PostWithPostMore {
  post     Post     @relation(fields: [postId], references: [id])
  postMore PostMore @relation(fields: [postMoreId], references: [id])

  postId     String
  postMoreId String

  @@id([postId, postMoreId])
}

model PostMore {
  id               String             @id @default(uuid())
  key              String
  value            String
  PostWithPostMore PostWithPostMore[]

  @@index([key])
}
